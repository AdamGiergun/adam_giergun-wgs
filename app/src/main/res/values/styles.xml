<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppThemeCustomizationsMini" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryMini</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMini</item>
    </style>

    <style name="AppThemeCustomizationsRich" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryRich</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRich</item>
    </style>

    <style name="MyCardViewStyle" parent="AppTheme">
        <item name="contentPaddingBottom">0dp</item>
        <item name="contentPaddingTop">0dp</item>
        <item name="contentPaddingLeft">2dp</item>
        <item name="contentPaddingRight">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="MyTextViewStyle" parent="AppTheme">
        <item name="android:layout_margin">@dimen/text_margin</item>
        <item name="android:textAppearance">?attr/textAppearanceLargePopupMenu</item>
    </style>

    <style name="MyEditTextStyle" parent="MyTextViewStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/colorEditableField</item>
    </style>

    <style name="MyTextViewStyleInList" parent="MyTextViewStyle">
        <item name="android:layout_margin">@dimen/text_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:textColor">@color/colorCardText</item>
    </style>

    <style name="RichAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">@android:color/holo_orange_light</item>
    </style>

    <style name="ShadowedText" parent="MyTextViewStyleInList">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AppWidgetText">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">@dimen/appwidget_text_size</item>
    </style>
</resources>